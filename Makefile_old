
##############
# Definicions
##############

OPT=-g -Wall
CFLAGS=$(OPT) -fdiagnostics-color=always -Wno-misleading-indentation

INCLUDE := jpleph

LIBRARIES := -lm

############
# Utilitats
############

all: compareNutations

.PHONY: all


compareNutations : compareNutations.cpp TT_to_TDB.o TT_to_TDB.c jpleph/jpleph.o jpleph/jpleph.c monte/SAT_RefSys.o monte/SAT_VecMat.o
	g++ $(CFLAGS) $^ -o $@ $(LIBRARIES)


##########
# Rutines
##########

jpleph/jpleph.o : jpleph/jpleph.c
	gcc -c $(CFLAGS) $< -o $@

TT_to_TDB.o : TT_to_TDB.c
	gcc -c $(CFLAGS) $< -o $@ $(LIBRARIES) 


monte/SAT_RefSys.o : monte/SAT_RefSys.cpp
	g++ -c $(CFLAGS) $< -o $@

monte/SAT_VecMat.o : monte/SAT_VecMat.cpp
	g++ -c $(CFLAGS) $< -o $@
